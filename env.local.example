# Supabase（必須）
# - NEXT_PUBLIC_ はクライアントにも公開されます（Anon Key は公開OK / Service Role は公開NG）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT（必須）
JWT_SECRET=your-long-random-secret

# App URL（推奨：メール本文やOG等で使用）
# 互換のため APP_URL / BASE_URL の両方を同じ値で設定しておくのがおすすめです
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email（任意：未設定でも開発ではモック送信されます）
RESEND_API_KEY=
FROM_EMAIL=noreply@hojokin-navi.jp

# Cron（任意：設定した場合、Authorization: Bearer <CRON_SECRET> が必須になります）
CRON_SECRET=

# Slack（任意）
SLACK_WEBHOOK_URL=

# Google Calendar API（相談予約機能で使用）
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=
GOOGLE_CALENDAR_ID=

